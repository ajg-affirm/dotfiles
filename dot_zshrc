# Path
export PATH="/opt/homebrew/bin:$PATH"

setopt globdots

# Basic aliases
alias ll='ls -lahi'
alias ..='cd ..'
alias ...='cd ../..'

# Useful functions
mkcd() {
  mkdir -p "$1" && cd "$1"
}

# Load Oh My Zsh (will be installed by run_once script)
export ZSH="$HOME/.oh-my-zsh"
ZSH_THEME="robbyrussell"
plugins=(git)
source $ZSH/oh-my-zsh.sh
